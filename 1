use strict;
use warnings;

use constant PI => 4*atan2(1,1);		# scalar constant
use constant WEEKDAYS => qw/Sunday Monday Tuesday Wednesday Thursday Friday Saturday/;	# list constant
use constant WEEKDAYS1 => ();	# list constant

if (defined WEEKDAYS1)
{
	print "defined\n";
}
else
{
	print "undef\n";
}

print (WEEKDAYS)[0], "\n";
